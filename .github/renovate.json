{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 3am on Saturday"
  ],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "description": "Auto-merge patch updates after CI passes",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Auto-merge minor updates for optional dev/docs dependencies",
      "matchManagers": ["pip_setup"],
      "matchPackageNames": [
        "pytest",
        "pytest-cov",
        "ruff",
        "mypy",
        "pre-commit",
        "mkdocs-material",
        "mkdocstrings",
        "sybil",
        "pymdown-extensions",
        "termynal"
      ],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Group non-major updates together",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "non-major dependencies"
    },
    {
      "description": "Separate group for major updates (require manual review)",
      "matchUpdateTypes": ["major"],
      "groupName": "major dependencies",
      "automerge": false
    },
    {
      "description": "Core runtime dependencies require review for all changes",
      "matchPackageNames": ["typer", "rich"],
      "automerge": false
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "minimumReleaseAge": "3 days",
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "ignoreDeps": [],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": false
  }
}
